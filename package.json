{
  "private": true,
  "description": "a progressive micro frontend library",
  "name": "ralliejs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --force-local",
    "clean": "lerna clean",
    "test": "jest --coverage",
    "build": "lerna run build --stream",
    "commit": "git cz",
    "lint": "eslint --fix --ext .ts,tsx,.js packages",
    "publish": "npm run build && lerna publish",
    "docs": "docsify serve docs",
    "playground:dev": "lerna run dev --stream",
    "playground:serve": "lerna run serve --stream",
    "playground:deploy": "gh-pages --dist 'packages/playground/dist' --branch 'gh-page'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ralliejs/rallie.git"
  },
  "author": "Philip Lau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ralliejs/rallie/issues"
  },
  "homepage": "https://github.com/ralliejs/rallie#readme",
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/vue": "^6.4.2",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vue/vue3-jest": "^27.0.0-alpha.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-vue": "^8.0.3",
    "gh-pages": "^3.2.3",
    "husky": "^4.3.8",
    "jest": "^27.1.1",
    "lerna": "^4.0.0",
    "nock": "^13.1.3",
    "node-fetch": "^3.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "vue": "^3.2.6",
    "vue-eslint-parser": "^8.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
